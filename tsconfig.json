{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": false,  
    "sourceMap": false,
    "inlineSourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": true
  }
}