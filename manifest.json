{
	"manifest_version": 2,
	"version": "1.6.1",
	"version_name": "1.6.1",
	"omnibox": {"keyword" : "JIRA"},
	"name": "__MSG_appName__",
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"icons": {
		"128": "cyan_charlie.png"
	},

	"background": {
		"persistent": false,
		"scripts": [
			"DatabaseConnection.js",
			"common.js",
			"omnibox.js",
			"runtime.js",
			"tabs.js"
		]
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"storage",
		"tabs",
        "notifications"
	],
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
  },

  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
