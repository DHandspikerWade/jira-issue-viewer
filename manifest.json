{
	"manifest_version": 2,
	"name": "JIRA Issue Viewer",
	"version": "0.3.0",
	"omnibox": {"keyword" : "JIRA"},

	"background": {
		"persistent": false,
		"scripts": [
			"omnibox.js"
		]
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"storage"
	],
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
  }
}